<h1>List of all movies</h1>

<table border="1">
  <tr>
    <td>
      ID
    </td>

    <td>
      Image
    </td>

    <td>
      Title
    </td>

    <td>
      Year
    </td>

    <td>
      Director
    </td>

    <td>

    </td>

  </tr>

<% @list_of_movies.each do |a_thing| %>

<%# a_thing is an instance of Movie that represents one row in the movies table %>
  <tr>
    <td> 
      <%= a_thing.id %> 
    </td>

    <td>
      <img src="https://robohash.org/<%= a_thing.image %>" >
    </td>

    <td> 
      <%= a_thing.title %> 
    </td>

    <td> 
      <%= a_thing.year %> 
    </td>

    <td>
      <% t = a_thing.director_id %>
      <%# Go from t to the director's name %>
      <% x = @list_of_directors.where({ :id => t }) %>
      <%= x.at(0).name %>
    </td>

    <td>
      <a href="/movies/<%= a_thing.director_id %>" >
        Show details
      </a>
    </td>

  </tr>
  <% end %>
</table>
